 printf("Prato 3\n");
 printf("Prato 4\n");
 printf("SAIR 5\n");

 printf("Qual numero do seu prato?:");
 scanf("%i", &menu);

switch(menu)
 {
default:
menu=5;
printf("Voce optou por sair!");
    break;

case 1:
printf("carne com batata R$:5,00");
    break;
case 2:
    printf("Arroz com feijao R$:4,00");
    break;

case 3:
    printf("Lasanha R$:6,00");
